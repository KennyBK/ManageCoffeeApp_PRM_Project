<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Custom toast -->
    <style name="successfulToast">
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/inter_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/GreenPrimary</item>
        <item name="stIconStart">@drawable/ic_checkbox_circle_line</item>
        <item name="stRadius">30dp</item>
    </style>

    <style name="errorToast">
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/inter_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/YellowPrimary</item>
        <item name="stIconStart">@drawable/ic_error_warning_line</item>
        <item name="stRadius">30dp</item>
    </style>

    <!--  Theme Status Bar Gray -->
    <style name="AppStatusBarGray" parent="Base.Theme.ManageCoffeeApp_PRM_Project">
        <item name="android:statusBarColor">@color/GrayPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/GreenPrimary</item>

        <!-- No need to override 'datePickerStyle' -->
        <!-- <item name="android:datePickerStyle">@style/MyDatePickerStyle</item> -->
    </style>
</resources>